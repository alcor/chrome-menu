{
  "name": "The Wrench Menu",
  "short_name": "The Wrench Menu",
  "description": "Treasured multi-tool,
  the spanner in chrome's works— 
  a missing menu.         ",
  "version": "1.0",
  "icons": {
    "128": "rsrc/wrench.png",
    "32": "rsrc/wrench.png"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": "rsrc/wrench.png",
    "default_title": "The Wrench",
    "default_popup": "src/menu.html"
  },
  "commands": {
    "pop-out-tab": { 
       "description": "Move Tab to Pop Up",
       "group":"Tab", "order": 1,
       "icon": "open_in_new" , 
       "suggested_key": { "default": "Alt+Shift+P" }, 
       "contexts":["page", "selection"]
      },
    "pic-in-pic": {
       "description": "Picture in picture",
       "group":"Tab", "order": 2,
       "icon": "picture_in_picture" , 
       "suggested_key": { "default": "Alt+P"}, 
       "contexts":["page", "selection"]},
    "copy-link": {
       "description": "Copy Link w/ Title (Suggestion: ^⌘T)          ", 
       "icon": "link",
       "group":"Tab", "order": 3,
       "contexts":["page", "selection"]
      },
    "previous-tab": {
        "group":"Tab", "order": 5,
        "description": "Switch to Prior Tab (Suggestion: ⌘E)",
        "icon": "swap_calls" 
      },
    "new-tab-right": {
      // "group":"Tab", "order": 4,
       "description": "New Tab to the Right (Suggestion: ⌘T)",
       "icon": "add_circle_outline"
      },

