    //    "icon": "sort"
    //   },

    "merge-windows": {
      "group":"Window", "order": 1,
      "description": "Merge Windows",
      "icon": "padding"
    },
    "remove-duplicates": {
      "group":"Window", "order": 2,
      "description": "Close Duplicate Tabs",
      "icon": "tab_unselected"
    },
    "discard-tabs": {
      "group":"Window", "order": 3,
      "description": "Unload Background Tabs",
      "icon": "web_asset_off"
    },
    "pin-tab": {
      "description": "Pin Tab"
    },

    "_execute_action": {"description": "Open Wrench Menu", "suggested_key": { "default": "Ctrl+Shift+W", "mac": "Command+Shift+W"}}
  },
  "permissions": [ "scripting", "tabs", "activeTab", "tabGroups", "storage", "bookmarks", "contextMenus" ],
  "manifest_version": 3
}