{
  "name": "The Wrench Menu",
  "short_name": "The Wrench Menu",
  "description": "
  Treasured multi-tool,
  a spanner in Chrome's works–
  the missing menu.        ",
  "version": "1.0",
  "icons": {
    "128": "rsrc/wrench.png",
    "32": "rsrc/wrench.png"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": "rsrc/wrench.png",
    "default_title": "The Wrench",
    "default_popup": "src/menu.html"
  },
  "commands": {
    "01-pin-tab": { "description": "Pin Tab            (⌘⇧P)                    " },
    "02-pop-out-tab": { 
       "description": "Pop Out Tab (⌥⇧P)                    ",
       "group":"Tab", "order": 1,
       "icon": "open_in_new" , 
       "suggested_key": { "default": "Alt+Shift+P" }, 
       "contexts":["page", "selection"],
       "enabled": ["tab"]
      },
    "03-pic-in-pic": {
       "description": "Pop Out Video (⌥P)                    ",
       "group":"Tab", "order": 2,
       "icon": "picture_in_picture_alt" , 
       "suggested_key": { "default": "Alt+P"}, 
       "contexts":["page", "selection"]},
    "20-copy-link": {
       "description": "Copy Link with Title (⌥⇧C)                    ", 
       "icon": "link",
       "group":"Tab", "order": 3,
       "contexts":["page", "selection"]
      },
    "12-previous-tab": {
        "group":"Tab", "order": 4,
        "description": "Switch to Prior Tab (⌘E)                    ",
        "icon": "swap_calls" 
      },
    "13-new-tab-right": {
      "group":"Tab", "order": 5,
       "description": "New Tab After This One (⌘T)                    ",
       "icon": "add_circle_outline"
      },
    "51-merge-windows": {
      "group":"Window", "order": 1,
      "description": "Merge Windows (⌘⇧M)                    ",
      "icon": "padding"
    },
    "53-remove-duplicates": {
      "group":"Window", "order": 2,
      "description": "Close Duplicate Tabs (⌘⇧W)                    ",
      "icon": "tab_unselected"
    },
    "55-discard-tabs": {
      "group":"Window", "order": 3,
      "description": "Unload Background Tabs (⌘⇧U)                    ",
      "icon": "web_asset_off"
    },
    "90-close-downloads": { "description": "Close Downloads Bar (⌘⇧D)                    " },

    "_execute_action": {"description": "Test", "suggested_key": { "default": "Alt+W", "mac": "Alt+W"}}
  },
  "permissions":[ "scripting", "tabs", "activeTab", "tabGroups", "storage", "contextMenus" ],
  "optional_permissions": ["downloads", "downloads.shelf"],
  "manifest_version": 3
}